{
  "manifest_version": 3,
  "name": "OG stocks",
  "version": "1.0",
  "description": "Gemini Dev project",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Click Me!"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "summarize/background.js"
  },
  "side_panel": {
    "default_path": "panel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}
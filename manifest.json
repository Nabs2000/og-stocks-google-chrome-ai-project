{
  "name": "AI â†’ Google Tasks",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Use Chrome's built-in AI to draft a task and save it to Google Tasks.",
  "action": { "default_popup": "popup/popup.html" },
  "background": { "service_worker": "bg/sw.js" },
  "permissions": ["identity", "storage", "activeTab", "scripting"],
  "host_permissions": ["https://tasks.googleapis.com/*"],
  "icons": { "128": "icons/icon128.png" },

  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/tasks"]
  }
}
